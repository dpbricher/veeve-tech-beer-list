head
    title Create Entry
    link(href='/style/create.css', rel='stylesheet')
body
  form(action='/create-new')
    div.name-table
      div.name-list
        div Buyer
        for name in nameList
          label
            input(type='radio', name='buyer', value=name)
            div= name

      div.name-list
        div Drinkers
        for name in nameList
          label
            input(type='checkbox', name='consumerList[]', value=name)
            div= name

    input(type='submit' value='Submit')
    a(href='/') Cancel
