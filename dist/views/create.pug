- var dataList  = [{name:'Dean',bought:'deanBought',consumed:'deanConsumed'}, {name:'Symon',bought:'symonBought',consumed:'symonConsumed'}, {name:'Giannis',bought:'giannisBought',consumed:'giannisConsumed'}, {name:'Oli',bought:'oliBought',consumed:'oliConsumed'}]

title Create Entry
body
  form(action='/create-new')
    for data in dataList
      div
        span= data.name
        for action in ['bought', 'consumed']
          div
            span= action
            label
              span 0
              input(name=data[action], type='radio', value=0, checked)
            for _, i in dataList
              label
                input(name=data[action], type='radio', value=i + 1)
                span= i + 1

    input(type='submit' value='Submit')
    a(href='/') Cancel
