title Main Page
head
  link(href='/style/main.css', rel='stylesheet')
body
  div.controls
    div
      div.next
        span Next:
        for personMap in nextBuyersList
          span= personMap.name

    a(href='/create') Create New

  div.info
    div.totals Totals:
    table
      thead
        tr
          th Name
          th Bought
          th Consumed
          th B/C Ratio
      tbody
        for person, i in personList
          tr(class=i % 2 ? 'even' : 'odd')
            td= person.name
            td= person.bought
            td= person.consumed
            td= person.ratio

  div.history
    div History:
    div.record-list
      for record, i in recordList
        table(class=i % 2 ? 'even' : 'odd')
          thead
            tr
              th Name
              th Bought
              th Consumed
          tbody
            for j in record
              tr
                td= j.name
                td= j.bought
                td= j.consumed
