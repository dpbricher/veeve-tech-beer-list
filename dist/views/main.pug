title Main Page
body
  a(href='/create') Create New
  div
    div Next:
      for personMap in nextBuyersList
        span= personMap.name

    div Totals:
    table
      thead
        tr
          th Name
          th Bought
          th Consumed
          th B/C Ratio
      tbody
        for person in personList
          tr
            td= person.name
            td= person.bought
            td= person.consumed
            td= person.ratio

    div History:
      for i in recordList
        table
          thead
            tr
              th Name
              th Bought
              th Consumed
          tbody
            for j in i
              tr
                td= j.name
                td= j.bought
                td= j.consumed
