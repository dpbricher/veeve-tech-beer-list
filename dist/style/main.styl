body
  > .controls,
  > .info,
  > .history
    border-bottom 1px solid black
    margin 0 auto
    max-width 1000px
    padding 10px

.next > span
  display:inline-block;
  padding:5px;

  &:not(:first-child)
    margin-left 5px

.next > span:not(:first-of-type)
  background-color:lightgrey;
  border-radius:4px;

.controls
  align-items center
  border-bottom 1px solid black
  display flex
  padding-bottom 5px

  a, div
    &:not(:first-child)
      margin-left 10px

.info
  table tr
    &.odd
      background-color lightgrey

.history
  .record-list
    display flex
    overflow-x auto

    table.odd
      background-color lightgrey

    table:not(:first-child)
      margin-left 10px
